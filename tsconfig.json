{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext", // Change ES2022 to ESNext to enable import attributes.
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
  },
  "include": ["src/**/*.ts", "src/*.ts"]
}
